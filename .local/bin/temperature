#!/bin/bash

temp="/tmp/temperature"
step=1
signal=5

if [ ! -f $temp ]; then
	current=$(hyprctl hyprsunset temperature)
	current=$((current / 60))
	echo $current > $temp
else
	current=$(cat $temp)
fi

if [[ "$1" == "up" ]]; then
	new=$((current + step > 100 ? 100 : current + step))
elif [[ "$1" == "down" ]]; then
	new=$((current - step < 0 ? 0 : current - step))
elif [[ "$1" == "left" ]]; then
	new=100
elif [[ "$1" == "right" ]]; then
	new=0
elif [[ "$1" == "set" ]]; then
	new=$2
else
	new=$current
fi

echo {\"percentage\":$(echo $new)}
pkill -RTMIN+$signal waybar

if [ "$new" -ne "$current" ]; then
	(hyprctl hyprsunset temperature $((new * 60)) -q) &
	echo $new > $temp
fi
