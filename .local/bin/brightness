#!/bin/bash

bus=0
temp="/tmp/brightness"
max=100
min=0
step=10
signal=8

if [ ! -f $temp ]; then
	current=$(ddcutil --bus $bus --sleep-multiplier 0 getvcp 10 -t)
	current=${current:9:-4}
	echo $current > $temp
else
	current=$(cat $temp)
fi

if [[ "$1" == "up" ]]; then
	new=$((current + step > max ? max : current + step))
elif [[ "$1" == "down" ]]; then
	new=$((current - step < min ? min : current - step))
elif [[ "$1" == "left" ]]; then
	new=$max
elif [[ "$1" == "right" ]]; then
	new=$min
elif [[ "$1" == "set" ]]; then
	new=$2
else
	new=$current
fi

echo {\"percentage\":${new}}
pkill -RTMIN+$signal waybar

if [ "$new" -ne "$current" ]; then
	pkill -f "ddcutil.*setvcp 10"
	(ddcutil --bus $bus --sleep-multiplier 0 setvcp 10 $new) &
	echo $new > $temp
fi
