{
  "layer": "top",
  "reload_style_on_change": true,
  "modules-left": [
    "clock",
    "custom/pacman",
    "group/collapsible-system"
  ],
  "modules-center": [
    "hyprland/workspaces"
  ],
  "modules-right": [
    "group/collapsible-tray",
    "pulseaudio",
    "network",
    "backlight",
    "battery",
    "group/collapsible-power"
  ],
  "clock": {
    "format": "{:%I:%M %p}",
    "tooltip": false
  },
  "custom/pacman": {
    "format": " {}",
    "interval": 60,
    "exec": "yay -Qu | wc -l",
    "exec-if": "exit 0",
    "hide-empty-text": true,
    "on-click": "kitty sh -c 'yay -Syu; echo Done - Press enter to exit; read'; pkill -SIGRTMIN+8 waybar",
    "signal": 8,
    "tooltip-format": "Available Updates"
  },
  "group/collapsible-system": {
    "orientation": "inherit",
    "drawer": {
      "transition-duration": 500,
      "transition-left-to-right": true,
      "click-to-reveal": true
    },
    "modules": [
      "custom/system-open",
      "cpu",
      "memory",
      "temperature"
    ]
  },
  "custom/system-open": {
    "format": "",
    "tooltip-format": "System Monitoring"
  },
  "cpu": {
    "format": "{usage}% "
  },
  "memory": {
    "format": "{}% "
  },
  "temperature": {
    "critical-threshold": 80,
    "format": "{temperatureC}°C {icon}",
    "format-icons": [
      "",
      "",
      ""
    ]
  },
  "hyprland/workspaces": {
    "format": ""
  },
  "group/collapsible-tray": {
    "orientation": "inherit",
    "drawer": {
      "transition-duration": 500,
      "transition-left-to-right": false,
      "click-to-reveal": true
    },
    "modules": [
      "custom/tray-open",
      "tray"
    ]
  },
  "custom/tray-open": {
    "format": "",
    "tooltip-format": "Tray"
  },
  "tray": {
    "spacing": 0
  },
  "pulseaudio": {
    "format": "{volume}% {icon}",
    "format-bluetooth": "{volume}% {icon}",
    "format-bluetooth-muted": "󰝟 {icon}",
    "format-muted": "󰝟",
    "format-icons": {
      "headphone": "",
      "hands-free": "",
      "headset": "",
      "phone": "",
      "portable": "",
      "car": "",
      "default": [
        "󰕿",
        "󰖀",
        "󰕾"
      ]
    },
    "on-click": "pavucontrol"
  },
  "network": {
    "format-wifi": "󰖩",
    "format-ethernet": "󰌗",
    "tooltip-format-wifi": "{essid}",
    "tooltip-format-ethernet": "{ifname}: {ipaddr}",
    "format-disconnected": "󰖪",
    "on-click": "nm-connection-editor"
  },
  "backlight": {
    "format": "{percent}% {icon}",
    "format-icons": [
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      "",
      ""
    ],
    "tooltip-format": "Brightness"
  },
  "battery": {
    "format": "{capacity}% {icon}",
    "format-charging": "{capacity}% ",
    "format-icons": [
      "󰂎",
      "󰁺",
      "󰁻",
      "󰁼",
      "󰁽",
      "󰁾",
      "󰁿",
      "󰂀",
      "󰂁",
      "󰂂",
      "󰁹"
    ],
    "tooltip-format": "Battery"
  },
  "group/collapsible-power": {
    "orientation": "inherit",
    "drawer": {
      "transition-duration": 500,
      "transition-left-to-right": false
    },
    "modules": [
      "custom/shutdown",
      "custom/lock",
      "custom/reboot"
    ]
  },
  "custom/shutdown": {
    "format": "",
    "tooltip-format": "Shutdown",
    "on-click": "shutdown now"
  },
  "custom/reboot": {
    "format": "",
    "tooltip-format": "Reboot",
    "on-click": "reboot"
  },
  "custom/lock": {
    "format": "",
    "tooltip-format": "Lock",
    "on-click": "hyprlock"
  }
}
